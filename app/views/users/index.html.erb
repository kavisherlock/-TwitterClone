<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <h1>Users</h1>
  </div>

  <div class="row">
    <div class="table-striped">
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.name %></td>
              <td><%= user.email %></td>
              <td>
                <% if current_user.id == user.id %>
                  <%= link_to 'My Profile', user, class: "btn-sm btn-success" %>
                <% else %>
                  <%= link_to 'User Profile', user, class: "btn-sm btn-success" %>
                <% end %>
              <%= link_to 'Edit User', edit_user_path(user), class: "btn-sm btn-info"  %>
              <%= link_to 'Delete User', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
      <%= link_to 'New User', new_user_path, class: "btn btn-info users-buttons" %>
  </div>
</div>
